{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "string",
            "required": true
        },
        "short_text": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "text"
        },
        "brand": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::brand.brand"
        },
        "slug": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "price": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "decimal",
            "required": true,
            "default": 0,
            "min": 0
        },
        "stock_quantity": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "integer",
            "default": 0,
            "required": true
        },
        "old_price": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "decimal",
            "default": 0,
            "min": 0
        },
        "price_single_variant": {
            "type": "component",
            "repeatable": false,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "choices.single-price"
        },
        "price_double_variant": {
            "type": "component",
            "repeatable": false,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "choices.twice-price"
        },
        "images": {
            "type": "media",
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "images",
                "files",
                "videos"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "applications": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::application.application"
        },
        "categories": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::category.category"
        },
        "perks": {
            "type": "component",
            "repeatable": false,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "perks.simple"
        },
        "featured": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::product.product"
        },
        "is_visible": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "boolean",
            "default": true
        },
        "sku_code": {
            "type": "string",
            "regex": "^[a-zA-Z0-9]{4,16}$",
            "required": true,
            "maxLength": 16,
            "minLength": 3,
            "unique": true
        },
        "vat_included": {
            "type": "boolean",
            "default": true
        },
        "vat_percent": {
            "type": "decimal",
            "default": 0
        },
        "barcode": {
            "type": "string",
            "maxLength": 50
        },
        "discount": {
            "type": "decimal",
            "min": 0,
            "default": 0
        },
        "is_discount_percent": {
            "type": "boolean",
            "default": false
        },
        "default_attr": {
            "type": "string"
        }
    }
}
